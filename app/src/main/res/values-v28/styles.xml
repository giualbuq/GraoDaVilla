<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextBodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item> <!-- Substituído -->
        <item name="android:letterSpacing">0.5</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextLabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineSpacingExtra">4sp</item> <!-- Substituído -->
        <item name="android:letterSpacing">0.5</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

</resources>
