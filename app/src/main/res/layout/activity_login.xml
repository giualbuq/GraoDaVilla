<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coffee_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50dp"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoLogin"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_graodavilla"
            android:contentDescription="Logo do app"
            android:layout_marginBottom="32dp" />

        <!-- E-mail -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_edittext_round"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_email"
                android:contentDescription="Ícone de e-mail"
                app:tint="@color/text_secondary" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="E-mail"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:background="@android:color/transparent"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                android:paddingStart="8dp"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>

        <!-- Senha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_edittext_round"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_password"
                android:contentDescription="Ícone de senha"
                app:tint="@color/text_secondary" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Senha"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:background="@android:color/transparent"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:paddingStart="8dp"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>

        <!-- Botão Login -->
        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Entrar"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="@color/accent_beige"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto_bold"/>

        <!-- Botão Login com Google -->
        <Button
            android:id="@+id/buttonGoogleLogin"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Entrar com Google"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:backgroundTint="@color/divider_gray"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto_bold"/>

        <!-- Link para cadastro -->
        <TextView
            android:id="@+id/textRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Não tem conta? Cadastrar"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_regular"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>
</ScrollView>
