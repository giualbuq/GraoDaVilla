<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/card_bg"
    android:layout_marginBottom="8dp">

    <!-- Imagem do produto -->
    <ImageView
        android:id="@+id/imageProductCart"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/defaultimage"
        android:layout_marginEnd="12dp" />

    <!-- Conteúdo vertical (nome, preços, quantidade) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <!-- Nome do produto -->
        <TextView
            android:id="@+id/textNameCart"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Espaço flexível para empurrar o conteúdo para baixo (space-between) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Preços -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/textPriceUnitCart"
                android:textSize="14sp"
                android:textColor="#DDD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="R$ 0,00"/>

            <TextView
                android:id="@+id/textPriceCart"
                android:textSize="16sp"
                android:textColor="#DDD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 0,00"/>
        </LinearLayout>

        <!-- Quantidade -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <ImageButton
                android:id="@+id/buttonDecreaseCart"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_minus"
                android:background="@drawable/rounded_button_background"
                app:tint="#c4c4c4" />

            <TextView
                android:id="@+id/textQuantityCart"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFF"
                android:textStyle="bold"
                />

            <ImageButton
                android:id="@+id/buttonIncreaseCart"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_add"
                android:background="@drawable/rounded_button_background"
                app:tint="#c4c4c4" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
