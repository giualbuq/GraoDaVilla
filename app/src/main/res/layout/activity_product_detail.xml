<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2F2F"
    android:fitsSystemWindows="true">

    <!-- Conteúdo principal com ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="120dp"> <!-- espaço para o container do total -->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Imagem do produto -->
            <ImageView
                android:id="@+id/imageProductDetail"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="centerCrop"
                android:src="@drawable/defaultimage"
                android:contentDescription="Imagem exemplo" />

            <!-- Linha com título e ícones -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="14dp"
                android:paddingStart="18dp"
                android:paddingEnd="18dp">

                <TextView
                    android:id="@+id/textNameDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:padding="6dp"/>

                <ImageView
                    android:id="@+id/buttonEditProduct"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="Editar produto"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:visibility="visible"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/buttonDeleteProduct"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="Deletar produto"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:visibility="visible"
                    app:tint="@color/white"/>
            </LinearLayout>

            <!-- Preço -->
            <TextView
                android:id="@+id/textPriceDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:padding="6dp"
                android:paddingTop="1dp"
                android:paddingStart="22dp"
                android:paddingEnd="10dp"/>

            <!-- Descrição -->
            <TextView
                android:id="@+id/textDescriptionDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:padding="6dp"
                android:paddingTop="1dp"
                android:paddingStart="22dp"
                android:paddingEnd="10dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Container inferior com total e contador -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#444444"
        android:layout_gravity="bottom"
        android:paddingStart="20dp">

        <!-- Total -->
        <TextView
            android:id="@+id/textTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: R$ 12,00"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:paddingBottom="8dp"/>

        <!-- Linha com contador e botão adicionar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Botão de diminuir -->
            <ImageView
                android:id="@+id/buttonDecrease"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_minus"
                android:contentDescription="Diminuir"
                android:padding="4dp"
                android:layout_marginEnd="4dp"
                app:tint="@android:color/white" />

            <!-- Quantidade -->
            <TextView
                android:id="@+id/textQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginEnd="4dp"
                android:gravity="center"/>

            <!-- Botão de aumentar -->
            <ImageView
                android:id="@+id/buttonIncrease"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_add"
                android:contentDescription="Aumentar"
                android:padding="4dp"
                android:layout_marginEnd="12dp"
                app:tint="@android:color/white" />

            <!-- Spacer para empurrar o botão para a direita -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- Botão Adicionar ao pedido -->
            <Button
                android:id="@+id/buttonAddToCart"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Adicionar"
                android:backgroundTint="@color/accent_beige"
                android:textColor="@android:color/white"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="15dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Floating Action Button para voltar -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Voltar"
        android:backgroundTint="#323232"
        app:elevation="8dp"
        android:layout_gravity="top|start"
        app:tint="#ffffff"/>
</FrameLayout>
