<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema principal Dark -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/accent_beige</item>
        <item name="backgroundColor">@color/coffee_bg</item>
        <item name="colorSurface">@color/coffee_bg</item>
        <item name="colorSurfaceVariant">@color/card_bg</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <!-- Tema do dialog para herdar cores e cantos -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.GraoDaVilla.MaterialAlertDialog</item>
    </style>

    <!-- Overlay do dialog para combinar com o app -->
    <style name="ThemeOverlay.GraoDaVilla.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="materialCardViewStyle">@style/Widget.GraoDaVilla.CardView</item>
    </style>

    <!-- Card personalizado (bordas, sombra, fundo) -->
    <style name="Widget.GraoDaVilla.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">@color/card_bg</item>
    </style>

    <!-- Tipografia Body Large -->
    <style name="TextBodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item> <!-- substitui lineHeight -->
        <item name="android:letterSpacing">0.5</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Tipografia Title Large -->
    <style name="TextTitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">6sp</item> <!-- substitui lineHeight -->
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Tipografia Label Small -->
    <style name="TextLabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.5</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

</resources>
